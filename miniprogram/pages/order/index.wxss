.top-bar{
  display: flex;
  align-items: center;
  padding: 10rpx;
  justify-content: center;
}
.top-tab{
  position: relative;
}
.top-bar-line{
  position: absolute;
  bottom: 0;
  height: 5rpx;
  width: 33.3%;
  transition: 0.3s all;
  display: flex;
  justify-content: center;
  align-items: center;
}
.inner-line{
  width: 60%;
  height: 100%;
  transition: 0.3s all;
}
.comment-container{
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  background-color: white;
  width: 100%;
  height: 70vh;
  border-radius: 20rpx 20rpx 0 0;
  transition: 0.3s all;
}